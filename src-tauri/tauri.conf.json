{
    "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/main/nicegui/elements/lib/tauri/tauri.conf.schema.json",
    "productName": "B2Upload",
    "version": "1.0.3",
    "identifier": "com.b2upload",
    "build": {
        "frontendDist": "../src"
    },
    "app": {
        "withGlobalTauri": true,
        "security": {
            "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
        },
        "windows": [
            {
                "title": "B2Upload",
                "width": 500,
                "height": 600,
                "resizable": true,
                "center": true
            }
        ]
    },
    "bundle": {
        "active": true,
        "targets": ["dmg", "deb", "appimage", "msi", "nsis"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "macOS": {
            "minimumSystemVersion": "10.15"
        }
    },
    "plugins": {}
}
